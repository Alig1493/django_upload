<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="{{ static('upload/css/bootstrap.css') }}">
    <link rel="stylesheet" href="{{ static('upload/css/bootstrap-grid.css') }}">
    <link rel="stylesheet" href="{{ static('upload/css/bootstrap-reboot.css') }}">


    <title>
        {% block title %}
            Hello, world!
        {% endblock title %}
    </title>

</head>
<body>
<div class="row justify-content-center mt-5">
    <div class="jumbotron jumbotron-fluid col-md-8 bg-white">
        <div class="container">
            {% block content %}
            {% endblock content %}
        </div>
    </div>
</div>

<!-- Optional JavaScript -->
<!-- jQuery first, then Popper.js, then Bootstrap JS -->
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
        integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
        crossorigin="anonymous"></script>

<script src="{{ static('upload/js/bootstrap.bundle.js') }}"></script>
<script src="{{ static('upload/js/bootstrap.js') }}"></script>
<script src="{{ static('upload/js/custom_script.js') }}"></script>
</body>
</html>
